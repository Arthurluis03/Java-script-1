  <h2>Cardapio</h2>

  <input type="text" id="valor" placeholder="Prato desejado">
  <button onclick="empilhar()">Adicionar no Cardapio</button>
  <button onclick="desempilhar()">Remover do cardapio</button>
  

  <h3>Cardapio atual</h3>
  <ul id="pilha"></ul>
  
  <script>
    let pilha = [];
    
    function empilhar() {
      let valor = document.getElementById("valor").value;
      if (valor !== "") {
        pilha.push(valor); 
        document.getElementById("valor").value = "";
        mostrarPilha();
      }
    }

    function desempilhar() {
      if (pilha.length > 0) {
        alert("Removido: " + pilha.pop()); 
        mostrarPilha();
      } else {
        alert("A pilha está vazia!");
      }
    }

    function verTopo() 
    { 
      let total= 
      alert("<p>O valor total é " + valortotal + "</p>")
    }

    function mostrarPilha() {
      let lista = document.getElementById("pilha");
      lista.innerHTML = "";
      for (let i = pilha.length - 1; i >= 0; i--) {
        let li = document.createElement("li");
        li.textContent = pilha[i];
        lista.appendChild(li);
      }
    }
  </script>
